{
  "manifest_version": 3,
  "name": "天氣變化通知",
  "version": "1.0.0",
  "action": {
    "default_title": "天氣變化通知",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.openweathermap.org/*",
    "https://ipapi.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
